<%= form_for @conn, Routes.session_path(@conn, :create), [method: :post, as: :user, class: "form-signin", novalidate: true], fn f -> %>
  <h1 class="h3 mb-3 font-weight-normal"><%= gettext "Please sign in" %></h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= text_input f, :username, placeholder: gettext("Username"), autofocus: true, autocomplete: "username", class: "form-control" %>
  <label for="inputPassword" class="sr-only">Password</label>
  <%= password_input f, :password, placeholder: gettext("Password"), autocomplete: "current-password", class: "form-control" %>
  <%= submit(gettext("Log in"), class: "btn btn-lg btn-primary btn-block")%>
<% end  %>
